/**app.wxss**/
/* 1.整体容器样式 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: whitesmoke;
  min-height: 100vh;
}

/* 2.卡片区域样式 */
.card{
  width: 710rpx;
  border-radius: 20rpx;
  background-color: white;
  margin: 20rpx 0;
}

/* 2-1 卡片页眉 */
.card-head{
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 2-1-1 头像图片 */
.avatar{
  width: 150rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

/* 2-1-2 文字区域 */
.title{
  display: flex;
  flex-direction: column;
}

/* 2-1-2(1) 用户昵称 */
.nickName{
  font-size: 35rpx;
  margin: 0 10rpx;
}

/* 2-1-2(2) 所在地 */
.address{
  font-size: 30rpx;
  margin: 0 10rpx;
  color: gray;
}

/* 2-2 卡片主体 图片样式 */
.card-body image{
  width: 100%;
}

/* 2-3 卡片页脚 */
.card-foot{
  font-size: 35rpx;
  text-align: right;
  margin: 20rpx;
}